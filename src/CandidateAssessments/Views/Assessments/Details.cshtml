@model CandidateAssessments.Models.Assessment

@{
    ViewData["Title"] = "Details";
}

<h2>@Model.CandidateName's Assessment</h2>
<h4>
    @Model.Quizes.Count quizes assigned.
</h4>
<hr />
<table class="table table-hover">
    <thead>
        <tr>
            <th>Topic</th>
            <th>Score</th>
            <th></th>
        </tr>
    </thead>
    @foreach (var quiz in Model.Quizes)
    {
        <tr>
            <td>@Html.DisplayFor(m => quiz.Topic.Name)</td>
            <td>@quiz.NumberCorrect / @quiz.NumberOfQuestions</td>
            <td>
                @if (quiz.TimeCompleted.HasValue)
                {
                    @* asp action to see quiz results *@
                    <a asp-action="Quiz" class="btn btn-default" asp-route-id="@quiz.QuizId">
                        Results <span class="glyphicon glyphicon-edit"></span>
                    </a>
                }
                else
                {
                    <div class="text-danger">
                        Incomplete <span class="glyphicon glyphicon-remove-circle"></span>
                    </div>
                }
            </td>
        </tr>
    }
</table>


