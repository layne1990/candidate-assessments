@model IEnumerable<CandidateAssessments.Models.TopicQuestion>

@{
    ViewData["Title"] = "Index";
}


<nav class="navbar navbar-full navbar-default" id="pageNav">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Questions</a>

        <form class="nav navbar-form navbar-nav pull-right" method="get" asp-action="Create">
            <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-plus"></span>&nbsp;&nbsp;Create New</button>
        </form>

        <form class="navbar-form pull-right" role="search">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search">
                <span class="input-group-btn">
                    <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
                </span>
            </div>
        </form>
    </div>
</nav>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.QuestionText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuestionType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CorrectAnswer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChoiceA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChoiceB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChoiceC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChoiceD)
        </th>




        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CorrectAnswer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChoiceA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChoiceB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChoiceC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChoiceD)
            </td>




            <td>
                <a asp-action="Edit" asp-route-id="@item.TopicQuestionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TopicQuestionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TopicQuestionId">Delete</a>
            </td>
        </tr>
    }
</table>
