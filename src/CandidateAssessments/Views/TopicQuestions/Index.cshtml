@model IEnumerable<CandidateAssessments.Models.TopicQuestion>

@{
    ViewData["Title"] = "Index";
}


<nav class="navbar navbar-full navbar-default" id="pageNav">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Questions</a>

        <form class="nav navbar-form navbar-nav pull-right" method="get" asp-action="Create">
            <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-plus"></span>&nbsp;&nbsp;Create New</button>
        </form>

        <form class="navbar-form pull-right" role="search">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search">
                <span class="input-group-btn">
                    <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
                </span>
            </div>
        </form>
    </div>
</nav>

<div class="card-deck-wrapper">
    <div class="card-deck row">

        @foreach (var item in Model)
        {
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                <div class="card">
                    <h3 class="card-header">
                        <span class="cardHeader">@Html.DisplayFor(modelItem => item.Topic.Name)</span><span>&nbsp;|&nbsp;&nbsp;&nbsp;Question # @Html.DisplayFor(modelItem => item.TopicQuestionId)</span>
                    </h3>
                    <div class="card-block">
                        <blockquote class="card-blockquote">
                            <p class="card-text">@Html.DisplayFor(modelItem => item.QuestionText)</p>
                            <ul class="list-group">
                                <li class="list-group-item">
                                    <span class="bold">A.)</span> @Html.DisplayFor(modelItem => item.ChoiceA)
                                </li>
                                <li class="list-group-item">
                                    <span class="bold">B.)</span> @Html.DisplayFor(modelItem => item.ChoiceB)
                                </li>
                                <li class="list-group-item">
                                    <span class="bold">C.)</span> @Html.DisplayFor(modelItem => item.ChoiceC)
                                </li>
                                <li class="list-group-item">
                                    <span class="bold">D.)</span> @Html.DisplayFor(modelItem => item.ChoiceD)
                                </li>
                            </ul>
                        </blockquote>
                    </div>
                    <dl class="dl-horizontal card-footer text-muted card-img-bottom">
                        <dt>
                            @Html.DisplayNameFor(modelItem => item.CorrectAnswer)
                        </dt>
                        <dd>
                            @Html.DisplayFor(modelItem => item.CorrectAnswer)
                        </dd>
                    </dl>
                </div>
            </div>
        }
    </div>
</div>



