@model IEnumerable<CandidateAssessments.Models.Assessment>

@{
    ViewData["Title"] = "Index";
}


<!--
    Navbar for Search and CreateNew
-->
<script>
    $(function () {
        var names = [];
        @foreach(var item in ViewBag.names)
        {
        <text>names.push('@item.CandidateName');</text>

    }

        $("#AssessSearch").autocomplete({
            source: names
        });
    })
</script>
<nav class="navbar navbar-full navbar-default" id="pageNav">
    <div class="container-fluid">
        <div class="col-md-3 col-xs-4">
            <span class="navbar-brand navbar-brand-custom">Assessment Results</span>
        </div>

        <form class="col-md-4 col-lg-4 col-md-offset-3 col-xs-6" method="get" asp-action="index">
            <div class="nav navbar-btn" role="search">
                <div class="input-group">
                    <input type="text" id="AssessSearch" name="searchParam" class="form-control" style="max-width: 400px;" placeholder="Search">
                    <span class="input-group-btn">
                        <button type="submit" id="AssessSearchBtn" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
                    </span>
                </div>
            </div>
        </form>

        <div class="col-md-2 col-xs-2">
            <form class="nav navbar-btn navbar-right" method="get" asp-action="Create">
                <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-plus"></span>&nbsp;&nbsp;Create New</button>
            </form>
        </div>
    </div>
</nav>

@{ IEnumerable<dynamic> qs = ViewBag.Quizzes; }

<!-- New Card!!!!! -->

<div class="card-deck-wrapper">
    <div class="card-deck">
        @{
            foreach (var item in Model)
            {
                
                <div class="row">
                    <div class="assessments col-xs-12">
                        <div class="card">
                            <div class="card-header">
                                <span class="CandidateName">@Html.DisplayFor(modelItem => item.CandidateName)</span>

                                <ul class="pull-right text-right list-unstyled">
                                    <li>@Html.DisplayNameFor(model => model.CreatedDate):@Html.DisplayFor(modelItem => item.CreatedDate)</li>
                                    <li>@Html.DisplayNameFor(modelItem => item.ExpirationDate):@Html.DisplayFor(modelItem => item.ExpirationDate)</li>
                                </ul>
                            </div>

                            <div class="card-block">
                                <blockquote class="card-blockquote">
                                    <p class="row"><span class="card-text col-xs-12">Quizzes Assigned: @qs.Where(x => x.AssessmentId == item.AssessmentId).Count()</span></p>

                                    <div class="card-deck-wrapper">
                                        <div class="card-deck">
                                            <div class="row">
                                                @foreach (var quiz in @qs.Where(x => x.AssessmentId == item.AssessmentId))
                                                {
                                                    <div class="col-xs-4 col-md-3">
                                                        <div class="card quiz-items">
                                                            <h4 class="card-header quiz-header tNames text-center">@quiz.Topic.Name</h4>
                                                            <div class="card-block quiz-block">
                                                                @if (quiz.TimeCompleted != null)
                                                                {
                                                                    var percent = (Math.Round((double)quiz.NumberCorrect / quiz.NumberOfQuestions, 2) * 100);

                                                                    var TimeTaken = quiz.TimeCompleted.Subtract(quiz.TimeStarted);
                                                                    TimeTaken = TimeTaken.ToString(@"hh\:mm\:ss");

                                                                    <div>
                                                                        <span class="col-xs-7 col-lg-6 text-right quiz-col">Score:</span>
                                                                        <span class="col-xs-5 col-lg-6 text-center quiz-col">
                                                                            <span style="font-size:1em;" class='label @(percent > 70 ? "label-success" : "label-danger")'>@percent %</span>
                                                                        </span>
                                                                    </div>
                                                                    <div>
                                                                        <span class="col-xs-7 col-lg-6 text-right quiz-col">Time Taken:</span>
                                                                        <span class="col-xs-5 col-lg-6 text-center quiz-col">@TimeTaken</span>
                                                                    </div>

                                                                    <div class="full-result text-center">
                                                                        <a asp-action="Quiz" class="btn btn-default" asp-route-id="@quiz.QuizId">
                                                                            Full Results <span class="glyphicon glyphicon-edit"></span>
                                                                        </a>
                                                                    </div>
                                                                }
                                                                else
                                                                {
                                                                    <div class="text-center center-text-trick">
                                                                        <span style="font-size:1em;" class="label label-danger">
                                                                            <span>Incomplete</span> <span class="glyphicon glyphicon-remove-circle" style="vertical-align:text-top;"></span>
                                                                        </span>
                                                                    </div>
                                                                }
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>

                                </blockquote>

                            </div>
                            <div class="card-footer text-muted">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <span class="pull-right">
                                            <a class="btn btn-info" asp-action="Code" asp-route-id="@item.AssessmentId">Code</a>&nbsp;
                                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.AssessmentId">Delete</a>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>



