@model IEnumerable<CandidateAssessments.Models.Assessment>

@{
    ViewData["Title"] = "Index";
}


<!--
    Navbar for Search and CreateNew
-->

<nav class="navbar navbar-full navbar-default" id="pageNav">
    <div class="container-fluid">
        <div class="col-md-2">
            <span class="navbar-brand navbar-brand-custom">Assessment Results</span>
        </div>
        <div class="col-md-2 navbar-btn">
            @if (!ViewBag.users)
            {
                <a class="btn btn-primary"  href="/Assessments/?searchParam=@ViewBag.search&users=true">View my assessments</a>
            }
            else
            {

                <a class="btn btn-primary"  href="/Assessments/?searchParam=@ViewBag.search&users=false">View all assessments</a>
            }
        </div>
        <form class="col-md-4 col-lg-4 col-md-offset-2 col-xs-6" method="get" asp-action="index"> 
            <div class="nav navbar-btn" role="search">
                <div class="input-group">
                    <input type="hidden" name="users" value="@ViewBag.users.ToString()" id="users"/>
                    <input type="text" id="AssessSearch" value="@ViewBag.search" name="searchParam" class="form-control" style="max-width: 400px;" placeholder="Search">
                    <span class="input-group-btn">
                        <button type="submit" id="AssessSearchBtn" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
                    </span>
                </div>
            </div>
        </form>

        <div class="col-md-2 col-xs-2">
            <form class="nav navbar-btn navbar-right" method="get" asp-action="Create">
                <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-plus"></span>&nbsp;&nbsp;Create New</button>
            </form>
        </div>
    </div>
</nav>

@{ IEnumerable<dynamic> qs = ViewBag.Quizzes; }

<!-- New Card!!!!! -->

<div class="card-deck-wrapper">
    <div class="card-deck">
        @{
            foreach (var item in Model.Reverse())
            {

                <div class="row">
                    <div class="assessments col-xs-12">
                        <div class="card">
                            <div class="card-header">
                                <span class="CandidateName">@Html.DisplayFor(modelItem => item.CandidateName)</span>

                                <ul class="pull-right text-right list-unstyled">
                                    <li>@Html.DisplayNameFor(model => model.CreatedDate):@Html.DisplayFor(modelItem => item.CreatedDate)</li>
                                    <li>@Html.DisplayNameFor(modelItem => item.ExpirationDate):@Html.DisplayFor(modelItem => item.ExpirationDate)</li>
                                </ul>
                            </div>

                            <div class="card-block">
                                <blockquote class="card-blockquote">
                                    <p class="row"><span class="card-text col-xs-12">Quizzes Assigned: @qs.Where(x => x.AssessmentId == item.AssessmentId).Count()</span></p>

                                    <div class="card-deck-wrapper">
                                        <div class="card-deck">
                                            <div class="row">
                                                @foreach (var quiz in @qs.Where(x => x.AssessmentId == item.AssessmentId))
                                                {
                                                    <div class="col-xs-4 col-md-3">
                                                        <div class="card quiz-items" style="height:200px">
                                                            <h4 class="card-header quiz-header tNames text-center">@quiz.Topic.Name</h4>
                                                            <div class="card-block quiz-block">
                                                                @if (quiz.TimeCompleted != null)
                                                                {
                                                                    var percent = (Math.Round((double)quiz.NumberCorrect / quiz.NumberOfQuestions, 2) * 100);

                                                                    var TimeTaken = quiz.TimeCompleted.Subtract(quiz.TimeStarted);
                                                                    TimeTaken = TimeTaken.ToString(@"hh\:mm\:ss");

                                                                    <div>
                                                                        <span class="col-xs-7 col-lg-6 text-right quiz-col">Percentage:</span>
                                                                        <span class="col-xs-5 col-lg-6 text-center quiz-col">
                                                                            <span style="font-size:1em;" class='label @(percent > 70 ? "label-success" : "label-danger")'>@percent %</span>
                                                                        </span>
                                                                        <span class="col-xs-7 col-lg-6 text-right quiz-col">Score:</span>
                                                                        <span class="col-xs-5 col-lg-6 text-center quiz-col">
                                                                            <span> @quiz.NumberCorrect/@quiz.NumberOfQuestions</span>
                                                                        </span>
                                                                        
                                                                    </div>
                                                                    <div>
                                                                        <span class="col-xs-7 col-lg-6 text-right quiz-col">Time Taken:</span>
                                                                        <span class="col-xs-5 col-lg-6 text-center quiz-col">@TimeTaken</span>
                                                                    </div>
                                                                  
                                                                }
                                                                else
                                                                {
                                                                    <div class="text-center">
                                                                        <span style="font-size:1em;" class="label label-danger">
                                                                            <span>Incomplete</span> <span class="glyphicon glyphicon-remove-circle" style="vertical-align:text-top; margin-bottom:63px;"></span>
                                                                          
                                                                        </span>
                                                                     
                                                                        </div>
                                                                        

                                                                }

                                                                <div class="full-result text-center">
                                                                    <a asp-action="Quiz" class="btn btn-default" asp-route-id="@quiz.QuizId">
                                                                        Full Results <span class="glyphicon glyphicon-edit"></span>
                                                                    </a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>

                                </blockquote>

                            </div>
                            <div class="card-footer text-muted">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <span class="pull-right">
                                            <a class="btn btn-primary" asp-action="Code" asp-route-id="@item.AssessmentId">Code</a>&nbsp;
                                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.AssessmentId">Delete</a>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
@if (ViewBag.search != null)
{
    <a class="btn btn-primary" asp-action="index">All Assessments</a>

}
@{var pages = Math.Ceiling(ViewBag.count / 5.0);}
@if (pages > 1)
{
    <ul class="pagination pagination-lg">

        <li><a href="/Assessments/?page=1&searchParam=@ViewBag.search">&laquo;</a></li>
        @{var back = (ViewBag.page > 1) ? ViewBag.page - 1 : 1; }
        <li><a href="/Assessments/?page=@back&searchParam=@ViewBag.search">&lsaquo;</a></li>
        @{
            var DisplayDots = true;
            var start = 1;
            var end = pages;
            if (ViewBag.page < 4)
            {
                if (pages > 5)
                {
                    end = 5;
                }
                else
                {
                    DisplayDots = false;

                }

            }
            else
            {
                if (ViewBag.Page > (pages - 3))
                {
                    start = (int)pages - 4;
                    DisplayDots = false;

                }
                else {
                    start = ViewBag.page - 2;
                    end = ViewBag.page + 2;
                }
            }


        }
        @for (int i = start; i <= end; i++)
        {
            @if (ViewBag.page == i)
            {
                <li class="active"><span>@i</span></li>

            }
            else {
                <li><a href="/Assessments/?page=@i&searchParam=@ViewBag.search">@i</a></li>
            }

        }
        @{var next = (ViewBag.page < pages) ? ViewBag.page + 1 : pages;}
        @if (DisplayDots)
        {
            var skip = next + 4;
            if (skip > pages)
            {
                skip = pages;

            }

            <li><a href="/Assessments/?page=@skip &searchParam=@ViewBag.search">...</a></li>
        }
        <li><a href="/Assessments/?page=@next&searchParam=@ViewBag.search">&rsaquo;</a></li>
        <li><a id="rightArrow" href="/Assessments/?page=@pages&searchParam=@ViewBag.search">&raquo;</a></li>
    </ul>
            }


<script>
    $(function () {
        var names = [];
        @foreach(var item in ViewBag.names)
        {
        <text>names.push('@item.CandidateName');</text>

    }

        $("#AssessSearch").autocomplete({
            source: names
        });
    })
</script>