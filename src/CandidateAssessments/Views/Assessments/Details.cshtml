@model CandidateAssessments.Models.Assessment

@{
    ViewData["Title"] = "Details";
}

<h2>@Model.CandidateName's Assessment</h2>
<h4>
    @Model.Quizes.Count quizes assigned.
</h4>
<hr />

<div class="list-group">
    @foreach (var quiz in Model.Quizes)
    {
    <div class="list-group-item">
        <h4 class="list-group-item-heading">@Html.DisplayFor(q => quiz.Topic.Name)</h4>
        
        @if (quiz.TimeCompleted.HasValue)
        {
        <span>@quiz.NumberCorrect / @quiz.NumberOfQuestions</span>
        <div>
            <a asp-action="Quiz" class="btn btn-default" asp-route-id="@quiz.QuizId">
                Full Results <span class="glyphicon glyphicon-edit"></span>
            </a>
        </div>
        }
        else
        {
        <div class="text-danger">
            Incomplete <span class="glyphicon glyphicon-remove-circle"></span>
        </div>
        }
        
    </div>
    }
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.AssessmentId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</p>
