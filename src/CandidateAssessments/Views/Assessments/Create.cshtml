@model CandidateAssessments.Models.Assessment
@using CandidateAssessments.Models

@{
    ViewData["Title"] = "Create";
}

<h2>Create Assessment</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>Assessment</h4>

        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
      

        <div id="optionsModal" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Options</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label class="control-label col-md-4">Time Limit (Minutes)</label>
                            <div class="col-md-2">
                                <input type="number" name="TimeLimit" value="10" min="1" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-4">Number of Questions</label>
                            <div class="col-md-2">
                                <input type="number" name="NumQuestions" value="20" min="1" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-4">Days to Take the Exam</label>
                            <div class="col-md-2">
                                <input type="number" name="NumDays" value="7" min="1" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Ok</button>
                    </div>
                </div>

            </div>
        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.CandidateName, htmlAttributes: new { @class = "control-label col-md-2" })
              <span class="btn btn-default btn-lg col-md-offset-4 glyphicon glyphicon-cog" data-toggle="modal" data-target="#optionsModal"></span>
            <div class="col-md-5">
                @Html.EditorFor(model => model.CandidateName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CandidateName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="checkbox-group required">

            @foreach (var t in ViewBag.Topics)
            {
                <div class="col-md-10">
                    <label class="col-md-2 control-label">@t.Name</label>
                    <input class ="checkbox" type="checkbox" name="Topics" value=@t.TopicId />
                </div>
            }
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" id="AssessmentCreate" value="Create" class="btn btn-default hidden" />
            </div>
        </div>
    </div>
}



<div>
    @Html.ActionLink("Back to List", "Index")
</div>
