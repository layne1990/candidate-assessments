@model IEnumerable<CandidateAssessments.Models.Assessment>

    @{
    ViewData["Title"] = "Index";
    }


    <!--
        Navbar for Search and CreateNew
    -->
    <nav class="navbar navbar-full navbar-default" id="pageNav">
        <div class="container-fluid">
            <div class="col-md-3 col-xs-4">
                <a class="navbar-brand" style="padding: 15px 0; margin-left: -15px;" href="#">Assessment Results</a>
            </div>

            <div class="col-md-4 col-lg-4 col-md-offset-3 col-xs-6">
                <div class="nav navbar-btn" role="search">
                    <div class="input-group">
                        <input type="text" id="AssessSearch" class="form-control" style="max-width: 400px;" placeholder="Search">
                        <span class="input-group-btn">
                            <button type="button" id="AssessSearchBtn" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
                        </span>
                    </div>
                </div>
            </div>

            <div class="col-md-2 col-xs-2">
                <form class="nav navbar-btn navbar-right" method="get" asp-action="Create" asp-route-id="@ViewBag.TopicId">
                    <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-plus"></span>&nbsp;&nbsp;Create New</button>
                </form>
            </div>
        </div>
    </nav>

    @{ IEnumerable<dynamic>
        qs = ViewBag.Quizzes;}
        <div class="list-group">
            @foreach (var item in Model)
            {
            <div class="list-group-item assessments">
                <h4 class="list-group-item-heading CandidateName">@Html.DisplayFor(modelItem => item.CandidateName)</h4>
                <div>
                    @Html.DisplayNameFor(model => model.CreatedDate)
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </div>
                <div>
                    @Html.DisplayNameFor(modelItem => item.ExpirationDate)
                    @Html.DisplayFor(modelItem => item.ExpirationDate)
                </div>
                <div>
                    @qs.Where(x => x.AssessmentId == item.AssessmentId).Count() quizzes assigned
                </div>

                <div class="list-group">
                    @foreach (var quiz in @qs.Where(x => x.AssessmentId == item.AssessmentId))
                    {
                    <div class="list-group-item">
                        <h5>@quiz.Topic.Name</h5>
                        @if (quiz.TimeCompleted != null)
                        {
                        var percent = (Math.Round((double)quiz.NumberCorrect / quiz.NumberOfQuestions, 2) * 100);
                        <span class='label @(percent > 70 ? "label-success" : "label-danger")'>@percent %</span>
                        <div>
                            <a asp-action="Quiz" class="btn btn-default" asp-route-id="@quiz.QuizId">
                                Full Results <span class="glyphicon glyphicon-edit"></span>
                            </a>
                        </div>
                        }
                        else
                        {
                        <div class="text-danger">
                            Incomplete <span class="glyphicon glyphicon-remove-circle"></span>
                        </div>
                        }
                    </div>
                    }
                </div>
                <div>
                    <a class="btn btn-info" asp-action="Code" asp-route-id="@item.AssessmentId">Code</a>&nbsp;
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.AssessmentId">Delete</a>
                </div>
            </div>
            }
        </div>
